<script>
const modify = document.getElementById('modify');

modify.addEventListener('submit', e => {
  if(document.getElementById('country').value === 'none'){
    e.preventDefault()
    document.getElementById('error-wrapper-modify').classList.remove('hidden')
  }
})

document.getElementById('errorToggleModify').addEventListener('click', () => {
  document.getElementById('error-wrapper-modify').classList.add('hidden');
})
</script>